<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @discount.name %></h1>
    <a href="<%= url_for :action => :favorite %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @discount.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Name</div>
            <div class="itemValue"><%= @discount.name %></div>
          </li>
      
          <li>
            <div class="itemLabel">Location</div>
            <div class="itemValue"><%= @discount.location %></div>
          </li>
      
          <li>
            <div class="itemLabel">Phone</div>
            <div class="itemValue"><%= @discount.phone %></div>
          </li>
      
          <li>
            <div class="itemLabel">Description</div>
            <div class="itemValue"><%= @discount.description %></div>
          </li>
      
          <li>
            <div class="itemLabel">Notes</div>
            <div class="itemValue"><%= @discount.note %></div>
          </li>
      
    </ul>
  </div>

</div>
